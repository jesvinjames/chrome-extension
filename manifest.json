{
  "manifest_version": 2,
  "name": "Survey Junkie Extension",
  "version": "1.0",
  "description": "Notifies when a new survey is available",
  "icons": {
    "128": "images/128x128.png",
    "48": "images/48x48.png",
    "16": "images/16x16.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background_script.js"],
    "persistent": false
  },
  "permissions": ["https://www.surveyjunkie.com/", "tabs", "storage"]
}
